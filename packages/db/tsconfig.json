{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext", // Use NodeNext module system
    "moduleResolution": "NodeNext", // NodeNext module resolution
    "target": "ESNext", // Target modern ECMAScript version
    "esModuleInterop": true, // Enable interop between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "strict": true // Enable strict type checking
  },
  "include": [
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}